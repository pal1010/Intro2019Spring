
/**
 * This assignment uses booleans to tell information about an input integer
 * @pal1010
 * 3-21-19
 * 
 */
import java.util.Scanner;
public class NumberClassification
{
    public static void main(String[] args)
    {
        Scanner in = new Scanner(System.in);
        System.out.print("Sauce me an integer fam -_-");
        int num = in.nextInt();
        
        //Using if statements, declare the following booleans
        /*
         * isOdd
         * isEven
         * isPositive
         * isNegative
         * isZero
         * is divisible by 17
         * is more than 100
         */
    boolean isOdd;
    boolean isEven;
    boolean isPositive;
    boolean isNegative;
    boolean isZero;
    boolean isdivisibleBy17;
    boolean isMoreThan100;    
        if(num % 2 == 1)
        {
            isOdd = true;
        }
        else
        {
            isOdd = false;
        }
        
        if(num < 0)
        {
            isNegative = true;
        }
        else
        {
            isNegative = false;
        }
        
        if(num >100)
        {
            isMoreThan100 = true;
        }
        else
        {
            isMoreThan100 = false;
        }
       
        if(num == 0)
        {
            isZero = true;
        }
        else
        {
            isZero = false;
        }
        
        if(num % 17 == 0)
        {
            isdivisibleBy17 = true;
        }
        else
        {
            isdivisibleBy17 = false;
        }
        
        if(num % 2 == 0)
        {
            isEven = true;
        }
        else
        {
            isEven = false;
        }
        
        if(num > 0)
        {
            isPositive = true;
        }
        else
        {
            isPositive = false;
        }
            
        System.out.println("The integer " + num + " has the following properties.");
        System.out.println("This number is odd: " + isOdd);
        System.out.println("This number is even: " + isEven);
        System.out.println("This number is positive: " + isPositive);
        System.out.println("This number is negative: " + isNegative);
        System.out.println("This number is more than 100: " + isMoreThan100);
        System.out.println("This number is divisible by 17: " + isdivisibleBy17);
        System.out.println("This number is zero: " + isZero);
            
        
    }
}
